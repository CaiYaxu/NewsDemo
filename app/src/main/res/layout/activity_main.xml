<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.MainActivity">

    <FrameLayout
        android:id="@+id/recommend_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="13">
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:background="#E8E8E8"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_recommend"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_recommend"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="3dp"
                android:layout_weight="2"
                android:src="@drawable/recommend"/>

            <TextView
                android:id="@+id/text_recommend"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="推荐"
                android:layout_marginBottom="2dp"
                android:textColor="#000"
                android:textSize="8sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_hotnews"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_hotnews"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:layout_margin="3dp"
                android:src="@drawable/hotnews"/>

            <TextView
                android:id="@+id/text_hotnews"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="热点"
                android:layout_marginBottom="2dp"
                android:textColor="#000"
                android:textSize="8sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_entertainment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_entertainment"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:layout_margin="3dp"
                android:src="@drawable/entertainment"/>

            <TextView
                android:id="@+id/text_entertainment"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="娱乐"
                android:layout_marginBottom="2dp"
                android:textColor="#000"
                android:textSize="8sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_myhome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_myhome"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:layout_margin="3dp"
                android:src="@drawable/myhome"/>

            <TextView
                android:id="@+id/text_myhome"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="我的"
                android:layout_marginBottom="2dp"
                android:textColor="#000"
                android:textSize="8sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>